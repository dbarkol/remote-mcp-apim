{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Python Functions",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 9091
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/mcp-server-python",
          "remoteRoot": "/azure-functions-host/workers/python"
        }
      ]
    },
    {
      "name": "Attach to .NET Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:azureFunctions.pickProcess}"
    }
  ]
}
